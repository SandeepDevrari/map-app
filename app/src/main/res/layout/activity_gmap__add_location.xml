<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay21"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:background="@android:color/white"
    android:visibility="visible"
    app:layout_constraintRight_toRightOf="parent"
    tools:context="com.example.angry.googlemap.GMap_AddLocation"
    tools:ignore="MissingConstraints,RtlHardcoded"
    tools:layout_editor_absoluteY="3dp">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="155dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/textView1"
        android:onClick="GMap_Save_Data"
        android:text="SAVE"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="311dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText1"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:hint="longitude"
        android:inputType="numberDecimal"
        tools:ignore="HardcodedText,LabelFor,MissingConstraints"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="149dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="35dp"
        android:text="Enter Latitude"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="217dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="92dp"
        android:text="Enter Longitude"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="149dp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/button1"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="enter full address"
        android:inputType="textPersonName"
        android:textSize="14sp"
        tools:ignore="HardcodedText,LabelFor,MissingConstraints"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="110dp"
        android:text="Enter Place Name"
        tools:ignore="HardcodedText,MissingConstraints,UnknownId"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="70dp" />

    <EditText
        android:id="@+id/editText31"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignTop="@+id/textView3"
        android:ems="10"
        android:hint="latitude"
        android:inputType="numberDecimal"
        tools:ignore="HardcodedText,LabelFor" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="OR"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="visible"
        tools:ignore="HardcodedText" />
</RelativeLayout>
